<%= form_for @user, remote: true do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.hidden_field :client_uri, :value => @user.client_uri %>

  <%= f.submit "Create new user", class: "btn btn-large btn-primary" %>
<% end %>